<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timerom.App.Views.Templates.Information.ProgressLineTemplate">
  <ContentView.Content>
      <StackLayout Spacing="-6">
            <Label x:Name="LabelCategory" Style="{StaticResource LabelSemiBold}" FontSize="15"/>
            <Grid ColumnDefinitions="*,50">
                <BoxView Grid.Column="0" x:Name="BackgroundLine" CornerRadius="3" Opacity=".1" HeightRequest="6" VerticalOptions="End"/>
                <BoxView Grid.Column="0" x:Name="ForegroundLine" HorizontalOptions="Start" CornerRadius="3" HeightRequest="6" VerticalOptions="End"/>
                <Label Grid.Column="1" HorizontalOptions="End" x:Name="LabelPercentage" FontSize="15" Style="{StaticResource LabelExtraBold}"/>
            </Grid>
        </StackLayout>
  </ContentView.Content>
</ContentView>